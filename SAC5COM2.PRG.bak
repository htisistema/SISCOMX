                        ENDIF
                        mtot_item := mtot_item + mov->quantd
                        mtot_venda := mtot_venda + (mov->quantd*mov->vl_vend)
                        mtot_com := mtot_com + iat(((mov->quantd*mov->vl_vend) * (mov->comissao /100)),2)
                        IF mnum_ped <> mov->num_ped
                                mtot_ped := mtot_ped + 1
