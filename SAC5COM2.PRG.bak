        IF EOF()
                atencao('Nao tem movimento de vendedor neste periodo')
                LOOP
        ENDIF
        mensagem('Espere o Final da Impressao OK !!!')
        marq := 'SAC5COM2.REL'
        IF ! imp_arq('SAC5COM2.REL','R')
                LOOP
        ENDIF

        mpoint := RECNO()
        WHILE mov->data_s_e <= mdata2 .AND. ! EOF()
